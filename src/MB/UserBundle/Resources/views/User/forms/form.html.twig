{{ form_start(form, {'attr': {'id': id|default('form')} }) }}
    
    {{form_widget(form)}}

    {% if with_submit is not defined or with_submit == true %}
    <button type="button" class="btn btn-lg btn-block btn-danger" onClick="confirmDelete()">
        <span class="glyphicon glyphicon-trash"></span> {% trans %}Delete user{% endtrans %}
    </button>
    {% endif %}
    
{{ form_end(form)}}

<script>
    var message = '{{ message }}'
    
    function confirmDelete(){
        bootbox.confirm(message,function(result){
            if(result == true){
                document.form.submit();
            }
        });
    }
</script>